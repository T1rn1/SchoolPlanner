<Page x:Class="SchoolPlanner.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolPlanner.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PreviousWeekButton" Content="Previous Week" Click="PreviousWeekButton_Click" Margin="5"/>
                <Button x:Name="NextWeekButton" Content="Next Week" Click="NextWeekButton_Click" Margin="5"/>
            </StackPanel>
            <Grid x:Name="scheduleGrid" />
        </StackPanel>
    </Border>
</Page>
