<Page x:Class="SchoolPlanner.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolPlanner.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddNewLessonButton" Content="+" FontSize="20" Padding="0" Style="{StaticResource RoundedButtonStyle}" Click="AddNewLessonButton_Click" Margin="5" Width="30"/>
                <Button x:Name="PreviousWeekButton" Content="Предыдущая неделя" Style="{StaticResource RoundedButtonStyle}" Click="PreviousWeekButton_Click" Margin="5" Width="210"/>
                <Button x:Name="NextWeekButton" Content="Следующая неделя" Style="{StaticResource RoundedButtonStyle}" Click="NextWeekButton_Click" Margin="5" Width="199"/>
            </StackPanel>
            <Grid x:Name="scheduleGrid" Margin="20"/>
        </StackPanel>
    </Border>
</Page>
