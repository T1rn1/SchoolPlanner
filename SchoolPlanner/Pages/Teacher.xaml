<Page x:Class="SchoolPlanner.Pages.Teacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SchoolPlanner.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Teacher">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid x:Name="MainGrid">
            <Button x:Name="AddNewTeacherBtn" Style="{DynamicResource RoundedButtonStyle}" VerticalAlignment="Top" Margin="10" Content="Добавить преподавателя" Click="AddNewTeacherBtn_Click"/>
            <ScrollViewer Style="{StaticResource FavsScrollViewer}" VerticalScrollBarVisibility="Auto" Margin="10,55">
                <StackPanel x:Name="MainStackPanel" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>